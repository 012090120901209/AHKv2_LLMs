# AHKv2_LLMs Environment Configuration
# Copy this file to .env and fill in your values

# GitHub API Configuration
# Optional: Increases API rate limit from 60 to 5000 requests/hour
GITHUB_TOKEN=your_github_personal_access_token

# GitHub API Settings
GITHUB_API_BASE=https://api.github.com
GITHUB_SEARCH_ENDPOINT=/search/repositories

# AHK v2 Script Feed Settings
AHK_FEED_LIMIT=25
AHK_FEED_CACHE_TTL=300000
AHK_SEARCH_QUERY=autohotkey v2 OR "autohotkey 2" language:AutoHotkey

# Build Configuration
BUILD_OUTPUT_DIR=dist
SCRIPTS_MANIFEST_PATH=scripts/ahk-scripts.json
POSTS_MANIFEST_PATH=posts/posts.json

# Update Schedule (cron format for GitHub Actions)
UPDATE_SCHEDULE=0 */6 * * *

# Debug Mode
DEBUG=false
